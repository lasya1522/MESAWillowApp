<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.app.ui.home_tab.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_trends"
        android:name="com.example.app.ui.trends_tab.TrendsFragment"
        android:label="Trends"
        tools:layout="@layout/fragment_trends"/>
    <fragment
        android:id="@+id/navigation_goals"
        android:name="com.example.app.ui.goals_tab.GoalsFragment"
        android:label="Goals"
        tools:layout="@layout/fragment_goals" />
    <fragment
        android:id="@+id/navigation_journal"
        android:name="com.example.app.ui.JournalFragment"
        android:label="Journal"
        tools:layout="@layout/fragment_journal" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.app.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>